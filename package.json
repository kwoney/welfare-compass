{
  "name": "welfare-compass",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev:web": "pnpm --filter @welfare/apps-web dev",
    "dev:api": "pnpm --filter @welfare/apps-api dev",
    "dev": "pnpm dev:web & pnpm dev:api",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "db:generate": "pnpm --filter @welfare/db prisma:generate",
    "db:migrate": "pnpm --filter @welfare/db prisma:migrate",
    "db:seed": "pnpm --filter @welfare/db prisma:seed"
  }
}
